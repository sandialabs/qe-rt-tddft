&control
    prefix = 'graphene_proton'
    calculation = 'scf'
    restart_mode = 'from_scratch'
    pseudo_dir = './pseudo/'
    outdir = './scratch/'
    tstress = .false.
    tprnfor = .true.
/
&system
    ibrav = 12
    a = 2.46
    b = 2.46
    c = 20.0
    cosab = -0.5
    nat = 3
    ntyp = 2
    ecutwfc = 200.
    ecutrho = 800.
    occupations = 'smearing'
    smearing = 'gaussian'
    degauss = 0.01
/
&electrons
    diagonalization = 'davidson'
    conv_thr = 1.d-6
/
ATOMIC_SPECIES
H   1    H.upf
C   12   C.upf

K_POINTS automatic
1 1 1    0 0 0

ATOMIC_POSITIONS crystal
H   0.500   0.500   0.250
C   0.333   0.333   0.500
C   0.666   0.666   0.500
